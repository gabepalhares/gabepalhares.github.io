---
interface Props {
  pageTitle?: string;
}

const navigationItems = [
  { name: 'Home', url: '/' },
  { name: 'Blog', url: '/blog/'},
  { name: 'About', url: '/about/' },
  { name: 'Now', url: '/now/'},
];

const socialIcons = [
{
    name: 'GitHub',
    url: 'https://github.com/gabepalhares',
    icon: 'i-ri-github-fill',
  },  
  {
    name: 'Twitter',
    url: 'https://x.com/gabepalhares',
    icon: 'i-ri-twitter-x-line',
  },
  {
    name: 'e-mail',
    url: 'mailto:hi@gabrielpalhares.dev',
    icon: 'i-uil-envelope-alt' },
];

const { pageTitle } = Astro.props;
---

<header class='border-b-4 border-black flex justify-between p-6 items-center'>
  {pageTitle && <h1 class='hidden'>{pageTitle}</h1>}
  <a href='/' class="hover:font-normal no-underline" title='Back to Home'>
    <p class='righteous md:text-5xl'>Gabriel Palhares</p>
  </a>
  <nav class='hidden md:inline-block'>
    <h2 class='hidden'>Nav</h2>
    <ul class='flex gap-8 poppins'>
      {
        navigationItems.map((item) => (
          <li>
            <a
              class="text-lg no-underline font-medium hover:font-medium hover:text-green-500 hover:underline hover:decoration-green-500 transition-all duration-150 ease-in-out"
              href={item.url}
              title={`Go to ${item.name}`}
            >
              {item.name}
            </a>
          </li>
        ))
      }
      {
        socialIcons.map((item) => (
          <li>
            <a
              href={item.url}
              class='hover:text-green-500 transition-all duration-150 ease-in-out'
              target='_blank'
              title={`'@GabrielPalhares on ${item.name}`}
            >
              <div class:list={[item.icon, 'w-6 h-6']} />
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <nav class='md:hidden flex'>
    <h2 class='hidden'>Mobile Navigation</h2>
    <ul class="poppins flex">
      <li class="pr-4">
        <a href="/blog">Blog</a>
      </li>
      <li class="pr-4">
        <a href="/about">About</a>
      </li>
      <li>
        <a href="/now">Now</a>
      </li>
    </ul>
  </nav>
</header>
