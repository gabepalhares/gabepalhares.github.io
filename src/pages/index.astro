---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'Javascript', url: 'https://www.javascript.com/', alt: 'JavaScript website' },
  { name: 'Typescript', url: 'https://www.typescriptlang.org/', alt: 'TypeScript website' },
  { name: 'React', url: 'https://react.dev/', alt: 'React website' },
  { name: 'Next.js', url: 'https://nextjs.org/', alt: 'Next.js website' },
  { name: 'Node.js', url: 'https://nodejs.org/en', alt: 'Node.js website' },
  { name: 'Go', url: 'https://go.dev/', alt: 'Golang website' },
  { name: 'PostgreSQL', url: 'https://www.postgresql.org/', alt: 'PostgreSQL website' },
  { name: 'MongoDB', url: 'https://www.mongodb.com/', alt: 'MongoDb website' },
  { name: 'Jest', url: 'https://jestjs.io/', alt: 'Jest website' },
  { name: 'Vitest', url: 'https://vitest.dev/', alt: 'Vitest website' },
];
---

<Layout
  title='Gabriel Palhares'
  pageTitle='Gabriel Palhares | Home'
  description='Software Engineer - Full-Stack Developer'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='intro' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>Sobre</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <h2 class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              Who am I? 
            </h2>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              I'm a full stack developer, committed to developing products that add value to the customer and user.
            </p>
            <Button
              target={'_blank'}
              href='https://github.com/minortypo'>
                Check my craft &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-4 md:col-span-3 lg:col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            Tech
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-4 md:col-span-3 lg:col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            G.arden
          </h2>
          <p class='poppins mb-4'>
            G.arden is the place I've built to document everything I study and learn.
            Inspired by the Zettelkasten method and created as a way to implement Learn In Public.
          </p>
          <Button
            target={'_blank'}
            href='https://gabrielpalhares.dev/garden'>
            README &rarr;
          </Button>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
